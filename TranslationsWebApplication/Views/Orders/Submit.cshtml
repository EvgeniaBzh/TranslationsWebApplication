@model TranslationsWebApplication.Models.Order

@{
    ViewData["Title"] = "Submit Translation";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Submit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="OrderId" />
    <div class="form-group">
        <label asp-for="SubmittedFileName" class="control-label"></label>
        <input type="file" class="form-control" name="submittedFile" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
