@model TranslationsWebApplication.Models.Order

@{
    ViewData["Title"] = "Edit";
    bool canEdit = Model.OrderStatus != OrderStatus.InProgress && Model.OrderStatus != OrderStatus.Done;
}


    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Mochiy+Pop+One&display=swap');

        .mochiy-pop-one-regular {
            font-family: "Mochiy Pop One", sans-serif;
            font-weight: 400;
            font-style: normal;
        }

        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 60px;
            background: url('images.jfif') no-repeat center center;
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }

    </style>

    <h1>Edit</h1>
    @if (canEdit)
    {
        <h4>Order</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="OrderId" />
                    <div class="form-group">
                        <label asp-for="OrderName" class="control-label"></label>
                        <input asp-for="OrderName" class="form-control" />
                        <span asp-validation-for="OrderName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OriginalLanguageId" class="control-label">OriginalLanguage</label>
                        <select asp-for="OriginalLanguageId" class="form-control" asp-items="ViewBag.OriginalLanguageId"></select>
                        <span asp-validation-for="OriginalLanguageId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TranslationLanguageId" class="control-label">TranslationLanguage</label>
                        <select asp-for="TranslationLanguageId" class="form-control" asp-items="ViewBag.TranslationLanguageId"></select>
                        <span asp-validation-for="TranslationLanguageId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TypeId" class="control-label">Type</label>
                        <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                        <span asp-validation-for="TypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TopicId" class="control-label">Topic</label>
                        <select asp-for="TopicId" class="form-control" asp-items="ViewBag.TopicId"></select>
                        <span asp-validation-for="TopicId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderScope" class="control-label"></label>
                        <input asp-for="OrderScope" class="form-control" />
                        <span asp-validation-for="OrderScope" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderPrice" class="control-label"></label>
                        <input asp-for="OrderPrice" class="form-control" />
                        <span asp-validation-for="OrderPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderSubmissionDate" class="control-label"></label>
                        <input asp-for="OrderSubmissionDate" class="form-control" />
                        <span asp-validation-for="OrderSubmissionDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
else
{
    <div class="alert alert-warning" role="alert">
        Editing of this order is blocked due to its status.
    </div>
}