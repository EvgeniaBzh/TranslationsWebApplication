@model TranslationsWebApplication.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalLanguageId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OriginalLanguageId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeId)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TopicId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TopicId)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderScope)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderScope)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderSubmissionDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderSubmissionDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-action="DownloadFile" asp-route-id="@Model.OrderId">Завантажити файл</a> |
    @if (Model.OrderStatus == OrderStatus.Offer)
    {
        <a asp-action="Respond" asp-route-id="@Model?.OrderId" class="btn btn-primary">Відгукнутися</a>
    }
    @if (Model.OrderStatus != OrderStatus.Done)
    {
        <div>
            <button class="btn btn-success" @(Model.OrderStatus != OrderStatus.InProgress ? "disabled" : "") onclick="location.href='@Url.Action("Submit", "Orders", new { id = Model.OrderId })'">Submit</button>
        </div>
    }
</div>
