@model IEnumerable<TranslationsWebApplication.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Mochiy+Pop+One&display=swap');

    .mochiy-pop-one-regular {
        font-family: "Mochiy Pop One", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:nth-child(odd) {
            background-color: #ffffff;
        }

        .table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4A0D5B;
            color: white;
        }

    .table {
        width: 80%;
        margin-right: 20%;
        border-collapse: collapse;
    }


    .action-link {
        color: black;
        text-decoration: none;
    }

        .action-link:hover {
            color: #A12F86;
        }


    .btn-create {
        background-color: #4A0D5B;
        color: white;
        border: none;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-create:hover {
            background-color: gray;
            color: black;
        }

    html {
        position: relative;
        min-height: 100%;
    }

    body {
        margin-bottom: 60px;
        background: url('../../css/ffonn5.jpg') no-repeat center center;
        background-size: cover;
        background-position: center;
        min-height: 100vh;
    }

    .dt-white-color {
        color: white;
        font-size: 22px;
    }

    .dt {
        color: black;
        font-size: 20px;
    }

</style>

<h1 class="mochiy-pop-one-regular" style="color: #4A0D5B; font-size: 40px;">Original Language Details</h1>


@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Name</th>
                <th>Original Language</th>
                <th>Translation Language</th>
                <th>Type</th>
                <th>Topic</th>
                <th>Scope</th>
                <th>Price</th>
                <th>Submission Date</th>
                <th>Status</th>
                <th>FileName</th>
                <th>Submitted File</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(_ => order.OrderName)</td>
                    <td>@Html.DisplayFor(_ => order.OriginalLanguage.LanguageName)</td>
                    <td>@Html.DisplayFor(_ => order.TranslationLanguage.LanguageName)</td>
                    <td>@Html.DisplayFor(_ => order.Type.TypeName)</td>
                    <td>@Html.DisplayFor(_ => order.Topic.TopicName)</td>
                    <td>@Html.DisplayFor(_ => order.OrderScope)</td>
                    <td>@Html.DisplayFor(_ => order.OrderPrice)</td>
                    <td>@Html.DisplayFor(_ => order.OrderSubmissionDate)</td>
                    <td>@Html.DisplayFor(_ => order.OrderStatus)</td>
                    <td>@Html.DisplayFor(_ => order.FileName)</td>
                    <td>@Html.DisplayFor(_ => order.SubmittedFileName)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}

<div>
    <a asp-action="Index" class="btn btn-create">Back to List</a>
</div>
